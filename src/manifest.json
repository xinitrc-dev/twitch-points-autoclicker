{
  "manifest_version": 2,
  "name": "Twitch Channel Points Autoclicker",
  "description": "Automatically claims 'Channel Points' on Twitch",
  "version": "1.5.1",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["arrive-2.4.1.min.js", "twitch-clicker.js"],
      "run_at" : "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "*://*.twitch.tv/*",
	"tabs",
	"storage",
	"notifications"
  ],
  "web_accessible_resources": [
    "arrive-2.4.1.min.js",
	"twitch-clicker.js"
  ],
  "options_ui": {
	"page": "options.html",
	"open_in_tab": true
  },
  "browser_action": {
    "default_title": "Channel Points Autoclicker",
    "default_icon": {
	  "48": "icon48.png",
	  "128": "icon128.png"
	},
    "default_popup": "popup.html"
  }
}